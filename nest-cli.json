{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "monorepo": true,
  "root": "src/api",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": false,
    "tsConfigPath": "tsconfig.build.json"
  },
  "projects": {
    "api": {
      "type": "application",
      "root": "src/api",
      "entryFile": "src/api/main",
      "sourceRoot": "src",
      "compilerOptions": {
        "tsConfigPath": "tsconfig.build.json",
        "assets": [],
        "watchAssets": false
      }
    },
    "worker": {
      "type": "application",
      "root": "src/worker",
      "entryFile": "src/worker/main",
      "sourceRoot": "src",
      "compilerOptions": {
        "tsConfigPath": "tsconfig.build.json",
        "assets": [],
        "watchAssets": false
      }
    }
  }
}
