# ===========================================
# Meeting AI v0.1 - Environment Variables
# ===========================================

# Application
NODE_ENV=development
PORT=3000

# Database (로컬에서 Docker의 Postgres 접근)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/app?schema=public

# Redis (로컬에서 Docker의 Redis 접근)
REDIS_HOST=localhost
REDIS_PORT=6379

# S3/MinIO Storage (로컬에서 Docker의 MinIO 접근)
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET=meetings
S3_REGION=us-east-1

# Presigned URL 만료 시간 (초) - 10분
PRESIGNED_URL_EXPIRES_IN=600

# Provider 설정 (mock | whisper | openai | anthropic 등)
ASR_PROVIDER=mock
LLM_PROVIDER=mock

